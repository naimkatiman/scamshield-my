# Local-only variables for `wrangler dev`.
# Copy to `.dev.vars` and fill real values. Never commit `.dev.vars`.

APP_NAME="ScamShield MY"
REGION="MY"
PROVIDER_MODE="mock"
WARNING_CARD_RENDER_MODE="auto"

# Comma-separated admin allowlist used during login promotion.
ADMIN_EMAILS="admin@example.com"

# Google OAuth
GOOGLE_CLIENT_ID="TODO_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="TODO_GOOGLE_CLIENT_SECRET"
GOOGLE_REDIRECT_URI="http://127.0.0.1:8787/api/auth/callback"

# Session signing
JWT_SECRET="TODO_RANDOM_64_BYTE_SECRET"

# AI provider
OPENROUTER_API_KEY="TODO_OPENROUTER_API_KEY"
AI_STRICT_MODE="false"
OPENROUTER_CHAT_MODELS="google/gemini-3-flash-preview:online,google/gemini-2.5-flash:online"
OPENROUTER_REPORT_MODELS="google/gemini-3-flash-preview:online,google/gemini-2.5-flash:online"
OPENROUTER_REFERER="http://127.0.0.1:8787"

# Browser API security
CORS_ALLOWED_ORIGINS="http://127.0.0.1:8787,http://localhost:8787"
PUBLIC_PARTNERSHIPS_ENABLED="false"

# Cloudflare Browser Rendering (needed for PDF export and PNG warning cards)
BROWSER_RENDERING_ACCOUNT_ID="TODO_CF_ACCOUNT_ID"
CF_BROWSER_RENDERING_TOKEN="TODO_CF_BROWSER_RENDERING_TOKEN"

# Optional provider keys
COINGECKO_API_KEY=""
GOPLUS_APP_KEY=""
GOPLUS_APP_SECRET=""

# Scam Intelligence Providers (Production)
# CoinGecko - Token identity verification
# Get API key from https://www.coingecko.com/en/api
COINGECKO_API_KEY=""

# GoPlus - Token security scanner
# API base: https://api.gopluslabs.io (default)
GOPLUS_API_BASE="https://api.gopluslabs.io"

# Honeypot.is - Honeypot detection
# API base: https://api.honeypot.is (default)
HONEYPOT_API_BASE="https://api.honeypot.is"

# Chainabuse - Scam report database
# Sign up at https://chainabuse.com/
CHAINABUSE_API_BASE="https://api.chainabuse.com"

# CryptoScamDB - Known scam database
# Sign up at https://cryptoscamdb.org/
CRYPTOSCAMDB_API_BASE="https://api.cryptoscamdb.org"
